<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/main.css">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <title>Dashboard</title>
</head>

<body>
    <!-- include header -->


    <h1>Profile</h1>

    <div class="flash-message">
        <p id="flash-message"></p>
        <% if (locals.flash) { %>

        <% Object.keys(flash).forEach((key) => { %> <%
            flash[key].forEach((message) => { %>
        <p class="<%= key %>"><%= message %></p>
        <% }) %>
        <% }) %>
        <% } else { %> 
           
        <% } %> 
    </div>

    <%- include("./partials/share-post.ejs") %>
    <%- include("./partials/update-post.ejs") %>

    <ul>
        <% for(let i = 0; i < userPosts.length; i++) { %>
        <li class="postContainer" id="<%= userPosts[i]._id %>">
            <div class="postedByInfo">
                <div class="profilePic"></div>
                <div class="postedBy">
                    <p class="postedByName"> <%= userPosts[i].name || "Unknown" %></p>
                    <p class="postedByUsername grey">
                        @<%= userPosts[i]?.postedBy?.username || "Unknown" %></p>
                </div>
                <div>
                    <p id="visibility.<%= userPosts[i].visibility %>"><%= userPosts[i].visibility %></p>
                </div>
                <div><button
                        onclick="handleUpdate('<%= userPosts[i]._id %>', '<%= userPosts[i].post %>',  '<%= userPosts[i].visibility %>')">edit</button>
                </div>
                <div> <button onclick="handleDelete('<%=userPosts[i]._id%>')">delete</button></div>
            </div>
            <div>
                <p id="post.<%= userPosts[i]._id %>" class="postContent"><%= userPosts[i].post %></p>
            </div>

            <div class="likesAndComment displayFlex">

                <div class="postLikeIcon displayFlex">
                    <ion-icon id="likeBtn" name="heart-outline" onclick="handleLike('<%= userPosts[i]._id %>')">
                    </ion-icon>
                    <% if (userPosts[i].likeCount >= 1) { %>
                    <p class="postLikeCount"><%= userPosts[i].likeCount || "" %> </p>
                    <% } %>
                </div>
                <div class="postCommentIcon displayFlex">
                    <ion-icon name="chatbubble-outline"></ion-icon>
                </div>

            </div>
            <div class="postComments">

                <%  userPosts[i].comments.forEach(comment => { %>
                <div class="comment">
                    <div class="commentPostedBy displayFlex">
                        <p class="postedByName"> <%= comment.postedBy.name || "Unknown" %> </p>
                        <p class="postedByUsername grey"> @<%= comment.postedBy.username || "Unknown" %> </p>
                    </div>
                    <div class="commentContent">
                        <p> <%= comment.comment || "Failed to display comment" %> </p>
                    </div>
                    <div class="commentCreatedAt grey">
                        <p> <%= comment.createdAt || "00:00" %> </p>
                    </div>


                </div>
                <%  }); %>
            </div>
            <div><%- include("./partials/comment.ejs") %></div>

            <button onclick="handleComment('<%= userPosts[i]._id %>')">comment</button>
        </li>
        <% } %>
    </ul>


    <script src="/js/code.js"></script>

</body>

</html>